section.section.section--contacts
  .wrapper
    .section__header
      h1.section__title #{title}

    .contacts
      each contact in contacts
        .contacts__item
          h3.contacts__title #{contact.title}

          if contact.logo
            figure.logo
              img.logo__img(src=contact.logo.src alt=contact.logo.alt)

          if contact.phone
            .phone
              i.icon-phone
              a(href=`tel:${contact.phone.tel}`).phone__number #{contact.phone.number}
              p.phone__text #{contact.phone.text}

          if contact.email
            .email
              i.icon-mail
              a.email__link(href="mailto:"+contact.email) #{contact.email}

          if contact.schedule
            .work-schedule
              i.icon-clock
              each item in contact.schedule
                .work-schedule__item
                  span.work-schedule__day #{item.day}
                  span.work-schedule__time #{item.time}

          if contact.address
            .location
              i.icon-location
              each item in contact.address
                .location__item #{item}
              .location__item
                a.email__link(href="https://www.google.com.ua/maps/place/%D0%BF%D1%80%D0%BE%D1%81%D0%BF.+%D0%91%D0%BE%D0%B3%D0%B4%D0%B0%D0%BD%D0%B0+%D0%A5%D0%BC%D0%B5%D0%BB%D1%8C%D0%BD%D0%B8%D1%86%D0%BA%D0%BE%D0%B3%D0%BE,+184,+%D0%94%D0%BD%D0%B8%D0%BF%D1%80%D0%BE,+%D0%94%D0%BD%D0%B5%D0%BF%D1%80%D0%BE%D0%BF%D0%B5%D1%82%D1%80%D0%BE%D0%B2%D1%81%D0%BA%D0%B0%D1%8F+%D0%BE%D0%B1%D0%BB%D0%B0%D1%81%D1%82%D1%8C,+49000/@48.374531,34.9915148,17.25z/data=!4m5!3m4!1s0x40dbfadc8c02ed85:0x2198c8dc18e270f8!8m2!3d48.3743541!4d34.9929347?hl=ru&authuser=0" target="_blank")
