- var title = 'Ваш заказ отправлен в обработку'
- var btnDone = 'Готово'

.modal.modal-order-send-success#modalOrderSendSuccess
  span.modal__close#modalClose
    i.icon-cross

  .modal__content
    .modal__wrapper.align-center
      h1 #{title}

  footer.modal__footer
    button.btn.btn-transparent.btn-done#modalCancel(type="button") #{btnDone}
