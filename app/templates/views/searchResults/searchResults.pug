- var badge = {
-   stock: 'Акция',
-   sale: 'Sale',
-   markdown: 'Уценка',
- };

- var products = [
-   {
-     badge: 'stock',
-     title: 'MANN W 914/2',
-     label: 'Поршень охлаждения',
-     price: '4007',
-     retail: '70 890,77',
-     unit: '0,11',
-     status: 'green',
-     article: 'a',
-   },
-   {
-     badge: 'sale',
-     title: 'MANN W 914/2',
-     label: 'Поршень охлаждения',
-     price: '4007,44',
-     retail: '70 890,77',
-     unit: '0,11',
-     status: 'red',
-     article: 'a',
-   },
-   {
-     badge: 'markdown',
-     title: 'MANN W 914/2',
